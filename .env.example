# Database (Railway provides this automatically)
DATABASE_URL="postgresql://postgres:password@localhost:5432/nokendeclic"

# JWT
JWT_SECRET="your-very-long-and-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-very-long-and-secure-refresh-token-secret-key-here"
JWT_REFRESH_EXPIRES_IN="7d"

# Google OAuth2
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-railway-app.railway.app/auth/google/callback"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# App (PORT is set automatically by Railway)
PORT=3000
FRONTEND_URL="https://your-frontend-url.com"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Mail (for email verification)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM="App Name <your-email@gmail.com>"
